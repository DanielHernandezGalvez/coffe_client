---
interface Props {
    icon: string;
    text: string;
}

const { icon, text } = Astro.props;
---

<div class="py-10 space-y-5 flex flex-col items-center">
    <img src={icon} alt={`Icono `} class="max-w-52" data-astro-router-skip />

    <h3 class="text-4xl text-cafe-800 font-secondary">{text}</h3>
</div>
